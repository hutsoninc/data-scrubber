{
  "name": "@hutsoninc/data-scrubber",
  "version": "2.0.0",
  "description": "Data validation and formatting utilities used by Hutson marketing team.",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "author": {
    "name": "AustinLeeGordon",
    "email": "gordon.austin2@gmail.com",
    "url": "http://www.austinleegordon.com"
  },
  "dependencies": {
    "datasets-us-states-names-abbr": "^1.0.0",
    "hutson-location-data": "^1.0.4",
    "is-email": "^1.0.0",
    "is-phone": "^2.0.0",
    "is-valid-zip": "0.0.5"
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "warn"
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hutsoninc/data-scrubber"
  },
  "license": "MIT"
}
